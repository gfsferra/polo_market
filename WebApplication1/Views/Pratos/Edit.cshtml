@model WebApplication1.Models.Prato

@{
ViewData["Title"] = "Edit";
}

<section class="edit">
    <h1>Editar Prato (@Html.DisplayFor(prato => prato.Nome))</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="Nome"></label>
            <input asp-for="Nome" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div>
            <label asp-for="Ingredientes"></label>
            <input asp-for="Ingredientes" />
            <span asp-validation-for="Ingredientes"></span>
        </div>
        <div>
            <label asp-for="CategoriaId"></label>
            <select asp-for="CategoriaId" asp-items="ViewBag.Categorias">
            </select>

        </div>
        <div>
            <label asp-for="Preco"></label>
            <input asp-for="Preco" />
            <span asp-validation-for="Preco"></span>
        </div>
        <div>
            <label asp-for="Validade"></label>
            <input asp-for="Validade" />
            <span asp-validation-for="Validade"></span>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>

    <a asp-action="Index">Back to List</a>
</section>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}