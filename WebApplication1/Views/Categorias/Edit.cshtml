@model WebApplication1.Models.Categoria

@{
ViewData["Title"] = "Edit";
}

<section class="edit">
    <h1 class="title">Editar Categoria (@Html.DisplayFor(model => model.Nome))</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" />
            <span asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" />
        </div>
    </form>

    <a asp-action="Index">Back to List</a>
</section>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}