@model WebApplication1.Models.Categoria

@{
ViewData["Title"] = "Details";
}
<section class="details">
    <h1>Detalhes da categoria: <span>@Html.DisplayFor(model => model.Nome)</h1>

    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <hr />
    <h2>Pratos da Categoria <strong>@Html.DisplayFor(model => model.Nome):</strong></h2>
    <ul>
        @foreach (var item in Model.Pratos)
        {
        <li>
            @Html.DisplayFor(modelItem => item.Nome)
        </li>
        }
    </ul>

    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>

</section>